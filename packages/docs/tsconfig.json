{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "jsx": "react",
      "module": "esnext",
      "rootDir": ".",
      "moduleResolution": "bundler",
      "baseUrl": ".",
      "paths": {
        "@src/*": ["./src/*"],
        "@lib/*": ["./lib/*"]
      },
      "typeRoots": ["node_modules/@types"],
      "resolveJsonModule": true,
      "declaration": true,
      "noEmit": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "allowJs": true
    },
    "include": ["src", "lib"],
    "exclude": ["node_modules"]
  }